<Window x:Name="ThatWindow" x:Class="Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      
    xmlns:trans="clr-namespace:Transitionals;assembly=Transitionals"
    xmlns:tranc="clr-namespace:Transitionals.Controls;assembly=Transitionals"
    xmlns:trant="clr-namespace:Transitionals.Transitions;assembly=Transitionals"    
    Title="Window2" Height="300" Width="300" WindowState="Maximized" ResizeMode="NoResize" WindowStyle="None">
    
    <Grid>
        <Image Name="ImageBg" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="Fill"/>
        <tranc:Slideshow Name="BgSlShow"/>

        <Border BorderBrush="#99FFFFFF" Name="BorderHomeSlides" Margin="10" Background="White" 
                    CornerRadius="0" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden">
            <Grid Name="Grid2" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">             
                <tranc:Slideshow Name="SlideShow" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Image Name="ImgRS1" Stretch="Uniform" MinWidth="100" MinHeight="100" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </Border>
        
    </Grid>
    
</Window>
